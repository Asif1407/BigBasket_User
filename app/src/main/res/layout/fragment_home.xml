<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.HomeFragment">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_bar_Main"
        android:padding="5dp" />

        <com.synnapps.carouselview.CarouselView
            android:layout_below="@+id/search_bar_Main"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:fillColor="#ffffff"
            app:pageColor="#000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp"
            android:id="@+id/carouselView" />

        <Button
            android:id="@+id/shop_now_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carouselView"
            android:padding="5dp"
            android:gravity="center"
            android:text="Shop Now"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_now_button"
            android:text="Trending Items"
            android:textColor="#020000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/trendingItems"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trendingRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/trendingItems"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical" />

</RelativeLayout>
